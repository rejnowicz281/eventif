<div class="auth-form">
  <h2 class="auth-form__heading">Login</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="auth-form__field">
      <%= f.label :email, class: "auth-form__field__label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "auth-form__field__input" %>
    </div>
    <div class="auth-form__field">
      <%= f.label :password, class: "auth-form__field__label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "auth-form__field__input" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="auth-form__field auth-form__field--remember-me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <%= f.submit "Continue", class: "auth-form__continue" %>
  <% end %>
  <div class="auth-form__link-container">
    Don't have an account? <%= link_to "Register", new_registration_path(resource_name), class: "auth-form__link-container__link"%>
  </div>
</div>
