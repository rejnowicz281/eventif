<div class="auth-form">
  <h2 class="auth-form__heading">Register</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="auth-form__field">
      <%= f.label :email, class: "auth-form__field__label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-form__field__input" %>
      <% if resource.errors.include?(:email) %>
        <% resource.errors.full_messages_for(:email).each do |msg| %>
          <li class="auth-form__field__error"><%= msg %></li>
        <% end %>
      <% end %>
    </div>
    <div class="auth-form__field">
      <%= f.label :first_name, class: "auth-form__field__label" %>
      <%= f.text_field :first_name, autocomplete: "first_name", class: "auth-form__field__input" %>
      <% if resource.errors.include?(:first_name) %>
        <% resource.errors.full_messages_for(:first_name).each do |msg| %>
          <li class="auth-form__field__error"><%= msg %></li>
        <% end %>
      <% end %>
    </div>
    <div class="auth-form__field">
      <%= f.label :last_name, class: "auth-form__field__label" %>
      <%= f.text_field :last_name, autocomplete: "last_name", class: "auth-form__field__input" %>
      <% if resource.errors.include?(:last_name) %>
        <% resource.errors.full_messages_for(:last_name).each do |msg| %>
          <li class="auth-form__field__error"><%= msg %></li>
        <% end %>
      <% end %>
    </div>
    <div class="auth-form__field">
      <%= f.label :password , class: "auth-form__field__label--password"%>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "auth-form__field__input" %>
      <% if resource.errors.include?(:password) %>
        <% resource.errors.full_messages_for(:password).each do |msg| %>
          <li class="auth-form__field__error"><%= msg %></li>
        <% end %>
      <% end %>
    </div>
    <div class="auth-form__field">
      <%= f.label :password_confirmation, class: "auth-form__field__label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-form__field__input" %>
      <% if resource.errors.include?(:password_confirmation) %>
        <% resource.errors.full_messages_for(:password_confirmation).each do |msg| %>
          <li class="auth-form__field__error"><%= msg %></li>
        <% end %>
      <% end %>
    </div>
    <%= f.submit "Continue", class:"auth-form__continue" %>
  <% end %>
  <div class="auth-form__link-container">
    Already have an acocunt? <%= link_to "Log In", new_session_path(resource_name), class: "auth-form__link-container__link"%>
  </div>
</div>
